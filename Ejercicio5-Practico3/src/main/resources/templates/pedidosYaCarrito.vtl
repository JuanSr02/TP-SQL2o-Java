<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pedidos Ya</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        padding-top: 80px;
      }
      .navbar {
        border-bottom: 2px solid #e5e5e5;
      }
      .card {
        margin-bottom: 20px;
      }
      .card-img-top {
        height: 200px;
        object-fit: cover;
        width: 100%;
      }
    </style>
  </head>
<body style="background-color:black;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-danger fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="/api/pedidosYa">PedidosYa</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/api/pedidosYa">Inicio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/api/pedidosYa/getCarrito"
                >Carrito</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/api/pedidosYa/getPedidos"
                >Pedidos Anteriores</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <h2>Productos en el Carrito</h2>
      #if($productos.size() > 0)
      <div class="row">
        #foreach($producto in $productos)
        <div class="col-md-4">
          <div class="card">
            <img
              src="$producto.urlImagen"
              class="card-img-top"
              alt="Imagen del Producto"
            />
            <div class="card-body">
              <h5 class="card-title">$producto.nombre</h5>
              <p class="card-text">$producto.descripcion</p>
              <p class="card-text">Precio: $producto.precio</p>
              <p class="card-text">Comercio: $producto.nombre_comercio</p>
              <p class="card-text">Cantidad: $producto.cantProducto</p>
              <form method="post" action="/api/pedidosYa/agregarProducto">
                <input
                  type="hidden"
                  name="idProducto"
                  value="$producto.idProducto"
                />
                <button type="submit" class="btn btn-primary">
                  Agregar 1 unidad m√°s al Carrito
                </button>
              </form>
            </div>
          </div>
        </div>
        #end
        <div class="col-12 mt-4">
          <h4>Costo Total: $costoTotal</h4>
        </div>
        <form
          method="post"
          action="/api/pedidosYa/finalizarPedido"
          class="mt-4 mb-3 me-2"
        >
          <button type="submit" class="btn btn-success">
            Finalizar Pedido
          </button>
        </form>
        <form
          method="post"
          action="/api/pedidosYa/vaciarCarrito"
          class="mt-4 mb-5"
        >
          <button type="submit" class="btn btn-danger me-2">
            Vaciar Carrito
          </button>
        </form>
      </div>
      #else
      <div class="alert alert-warning" role="alert">
        No hay productos en tu carrito.
      </div>
      #end
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
